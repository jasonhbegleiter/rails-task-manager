<h1>Let's create a new task!</h1>

<div class="container">

   <%= form_for @task, url: {action: "create"} do |f|  %>
    <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
   <%= f.submit class: 'btn btn-primary' %>

   <% end %>
</div>
